{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "types": ["node", "@playwright/test"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "../",
    "baseUrl": "../",
    "paths": {
      "@pages/*": ["src/test/pages/*"],
      "@specs/*": ["src/test/specs/*"],
      "@utils/*": ["src/test/utils/*"],
      "@data/*": ["data/*"],
      "@config/*": ["config/*"]
    }
  },
  "include": [
    "../src/**/*",
    "../data/**/*",
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test-results",
    "reports"
  ]
} 